{
  "name": "serial-xterm",
  "displayName": "Serial xTerm",
  "description": "A serial terminal using xTerm",
  "version": "0.9.1",
  "publisher": "youkony",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents":[
    "onView: serial-xterm-view",
    "onCommand: serial-xterm.startTerminal"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youkony/vscode_terminal.git"
  },
  "extensionKind": [
    "ui", "workspace"
  ],
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "serial-xterm",
          "title": "Serial xTerm",
          "icon": "src/terminal.svg"
        }
      ]
    },
    "views": {
      "serial-xterm": [
        {
          "id": "serial-xterm-view",
          "type": "webview",
          "name": "Serial xTerm",
          "icon": "src/terminal.svg",
          "contextualTitle": "Serial xTerm"
        }
      ]
    },
    "commands": [
      {
        "command": "serial-xterm.start",
        "title": "Start Terminal With New Configuration",
        "category": "Serial xTerm",
        "icon": {
          "dark": "static/images/dark/connect.svg",
          "light": "static/images/light/connect.svg"
        }
      },
      {
        "command": "serial-xterm.stop",
        "title": "Stop Terminal",
        "category": "Serial xTerm",
        "icon": {
          "dark": "static/images/dark/disconnect.svg",
          "light": "static/images/light/disconnect.svg"
        }
      },
      {
        "command": "serial-xterm.clear",
        "title": "Clear",
        "category": "Serial xTerm",
        "icon": "$(clear-all)"
      },
      {
        "command": "serial-xterm.dump",
        "title": "Dump Terminal Output to Editor",
        "category": "Serial xTerm",
        "icon": "$(go-to-file)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "serial-xterm.clear",
          "when": "view == serial-xterm-view",
          "group": "navigation@0"
        },
        {
          "command": "serial-xterm.start",
          "when": "view == serial-xterm-view && !serial-xterm:running",
          "group": "navigation@1"
        },
        {
          "command": "serial-xterm.stop",
          "when": "view == serial-xterm-view && serial-xterm:running",
          "group": "navigation@1"
        },
        {
          "command": "serial-xterm.dump",
          "when": "view == serial-xterm-view",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "serialport": "^10.4.0",
    "xterm": "^5.2.1",
    "xterm-addon-fit": "^0.7.0"
  }
}
